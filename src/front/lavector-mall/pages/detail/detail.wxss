@import "/wxParse/wxParse.wxss";
page{
  background-color: #f5f5f5;
}

.article{
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.article-title{
  font-size: 36rpx;
  padding: 10rpx 0;
}
.article-info{
  font-size: 28rpx;
  color: #666;
  padding-bottom: 20rpx;
  position: relative;
}
.article-count{
  position: absolute;
  right: 0px; 
  top: 0px;
}
.article-content{
  font-size: 28rpx;
}
.related-shop-title{
  padding: 20rpx;
  border-bottom: 1px solid #ddd;
  font-size: 32rpx;
  background-color: #fff;
}

.related-shop-list {
  background-color: #fff;
  padding: 20rpx;
}
.related-shop-list .shop-info{
  flex-direction: column;
}
.related-shop-list .shop-logo{
  padding-right: 30rpx;
}
.related-shop-list .name{
  font-size: 32rpx;
}
.related-shop-list .address{
  font-size: 28rpx;
  color: #666;
}
.related-shop-list .favorite{
  width:50rpx;
  height:50rpx;
  margin:30rpx 15rpx;
}