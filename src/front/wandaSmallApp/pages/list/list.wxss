page{
  background-color: #f5f5f5;
  height:100%;
}
.icon-arrowdown{
  font-size:20rpx;
  padding-left:10rpx;
}
.top-bar {
    height: 56rpx;
    padding: 20rpx;
}
.top-bar .position-select {
    font-size: 24rpx;
    width: 220rpx;
    line-height: 56rpx;
}
.weui-search-bar__box{
  padding: 0px;
}
.weui-search-bar__input{
  padding-left:30px;
  border-radius:30px;
  border:1px solid #ddd;
  background-color: #fff;
}
.item-list {
  padding: 20rpx;
}
.item {
  flex-direction: row;
}

.item .item-content {
  /* height: 100px; */
}

.item .address {
  color: #9a9a9a;
  font-size: 24rpx;
  padding: 10rpx;
}

.item .item-title {
  position: absolute;
  width: 100%;
  bottom: 0px;
}

.item .item-image {
  height: 250rpx;
  width: 635rpx;
}

.item .item-image-container {
  position: relative;
}

.item .item-image-container text {
  align-self: flex-end;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5); /*实现FF背景透明，文字不透明*/
  width:612rpx;
  font-size:28rpx;
  padding:10rpx 0rpx 10rpx 20rpx;
}

.item .item-operation {
  flex-direction: column;
}

.item .item-operation .item-operation-button {
  flex-grow: 1;
  font-size: 24rpx;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  background-color: #fff;
}
.item .item-operation .item-operation-button:nth-child(1){
  border-bottom: 1px solid #ddd;
}
.item .item-operation .item-operation-button image {
  width: 35rpx;
  height: 35rpx;
  margin-top:24rpx;
}
.weui-flex__item text{
  color: #979797;
}
.weui-loadmore__tips_in-line{
  background-color: #f5f5f5;
}